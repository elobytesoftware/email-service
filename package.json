{
  "name": "elo-email-service",
  "version": "1.0.1",
  "description": "Email service",
  "keywords": [
    "elo",
    "email service"
  ],
  "homepage": "https://github.com/elobytesoftware/email-service",
  "bugs": {
    "url": "https://github.com/elobytesoftware/email-service/issues"
  },
  "author": "ELO <info@elobyte.com> (https://elobyte.com/)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elobytesoftware/email-service.git"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "type": "module",
  "license": "MIT",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "ci": "npm run build && npm run check-format && npm run check-exports && npm run test",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-exports": "attw --pack .",
    "test": "vitest run",
    "dev": "vitest",
    "local-release": "changeset version && changeset publish",
    "prepublishOnly": "npm run ci"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.16.1",
    "@changesets/cli": "^2.27.8",
    "@nestjs/testing": "^10.4.1",
    "@types/nodemailer": "^6.4.15",
    "nodemailer": "^6.9.15",
    "prettier": "^3.3.3",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "peerDependencies": {
    "dotenv": "^16.4.5"
  }
}
